---
// Clean, Simple Base Layout - Consistent Style Guide
import '../styles/global.css';
import Analytics from '@vercel/analytics/astro';

const {
  title = 'Wine Quick Start - Simple Wine Guidance',
  description = 'Simple wine guidance from certified sommeliers. Find the right wine for any occasion.',
  canonical,
  schema,
  ogImage
} = Astro.props;

const canonicalURL = canonical || new URL(Astro.url.pathname, Astro.site);
const ogImageURL = ogImage ? new URL(ogImage, Astro.site).href : new URL('/og-default.png', Astro.site).href;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="generator" content={Astro.generator} />
    
    <!-- Core SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="Wine Quick Start" />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />
    
    <!-- Additional Meta -->
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Wine Quick Start" />
    <meta name="theme-color" content="#a52145" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    
    <!-- Structured Data -->
    {schema && (
      <script type="application/ld+json" set:html={JSON.stringify(schema)} />
    )}
    

    
    <style>
        /* Only minimal custom styles needed - Tailwind handles the rest */
        html {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
        }

        .font-serif {
            font-family: 'Playfair Display', Georgia, serif;
        }
        
        /* Mobile Menu Animation */
        .mobile-menu {
            transform: translateX(100%);
            transition: transform 0.2s ease;
        }
        
        .mobile-menu.open {
            transform: translateX(0);
        }
        
        /* Focus ring utility */
        .focus-ring:focus {
            @apply outline-2 outline-wine-500 outline-offset-2;
        }
    </style>
</head>
<body>
    <!-- Skip Link for Accessibility -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 bg-wine-600 text-white px-4 py-2 rounded focus-ring">
        Skip to main content
    </a>
    
    <!-- Header -->
    <header class="bg-white border-b border-gray-200 sticky top-0 z-50 shadow-sm">
        <div class="container">
            <div class="flex justify-between items-center h-16">
                <!-- Logo -->
                <a href="/" class="text-xl md:text-2xl font-bold text-wine-700 focus-ring rounded-md px-2 py-1 hover:text-wine-800 transition-colors">
                    Wine Quick Start
                </a>
                
                <!-- Desktop Navigation -->
                <nav class="hidden md:flex items-center space-x-1">
                    <a href="/wine-pairings/"
                       class={`px-4 py-2 rounded-md font-medium transition-all duration-200 focus-ring ${currentPath.startsWith('/wine-pairings') ? 'text-wine-700 bg-wine-50' : 'text-gray-700 hover:text-wine-700 hover:bg-wine-50'}`}>
                        Pairings
                    </a>
                    <a href="/learn/"
                       class={`px-4 py-2 rounded-md font-medium transition-all duration-200 focus-ring ${currentPath.startsWith('/learn') ? 'text-wine-700 bg-wine-50' : 'text-gray-700 hover:text-wine-700 hover:bg-wine-50'}`}>
                        Learn
                    </a>
                    <a href="/shop/"
                       class={`px-4 py-2 rounded-md font-medium transition-all duration-200 focus-ring ${currentPath.startsWith('/shop') ? 'text-wine-700 bg-wine-50' : 'text-gray-700 hover:text-wine-700 hover:bg-wine-50'}`}>
                        Shop
                    </a>
                    <a href="/gifts/"
                       class={`px-4 py-2 rounded-md font-medium transition-all duration-200 focus-ring ${currentPath.startsWith('/gifts') ? 'text-wine-700 bg-wine-50' : 'text-gray-700 hover:text-wine-700 hover:bg-wine-50'}`}>
                        Gifts
                    </a>
                    <a href="/subscription/"
                       class={`px-4 py-2 rounded-md font-medium transition-all duration-200 focus-ring ${currentPath.startsWith('/subscription') ? 'text-wine-700 bg-wine-50' : 'text-gray-700 hover:text-wine-700 hover:bg-wine-50'}`}>
                        Advisory
                    </a>
                    <a href="/about/"
                       class={`px-4 py-2 rounded-md font-medium transition-all duration-200 focus-ring ${currentPath.startsWith('/about') ? 'text-wine-700 bg-wine-50' : 'text-gray-700 hover:text-wine-700 hover:bg-wine-50'}`}>
                        About
                    </a>
                </nav>
                
                <!-- Mobile Menu Button -->
                <button
                    class="md:hidden p-2 text-gray-600 hover:text-wine-700 hover:bg-wine-50 rounded-md transition-all duration-200 focus-ring"
                    aria-label="Toggle mobile menu"
                    aria-expanded="false"
                    id="mobile-menu-button"
                >
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" class="menu-icon"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" class="close-icon hidden"></path>
                    </svg>
                </button>
            </div>
        </div>
        
        <!-- Mobile Navigation Menu -->
        <div class="mobile-menu fixed inset-y-0 right-0 w-full max-w-sm bg-white border-l border-gray-200 md:hidden shadow-xl z-50" id="mobile-menu">
            <div class="flex flex-col h-full">
                <div class="flex items-center justify-between p-4 border-b border-gray-200">
                    <span class="text-lg font-bold text-wine-700">Menu</span>
                    <button class="p-2 text-gray-400 hover:text-gray-600 rounded-md" onclick="document.getElementById('mobile-menu-button').click()">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
                <div class="flex-1 overflow-y-auto p-4">
                    <nav class="space-y-1">
                        <a href="/wine-pairings/" class="flex items-center px-4 py-3 text-base font-medium text-gray-700 hover:bg-wine-50 hover:text-wine-700 rounded-lg transition-all duration-200">
                            Wine Pairings
                        </a>
                        <a href="/learn/" class="flex items-center px-4 py-3 text-base font-medium text-gray-700 hover:bg-wine-50 hover:text-wine-700 rounded-lg transition-all duration-200">
                            Learn
                        </a>
                        <a href="/shop/" class="flex items-center px-4 py-3 text-base font-medium text-gray-700 hover:bg-wine-50 hover:text-wine-700 rounded-lg transition-all duration-200">
                            Shop Wine
                        </a>
                        <a href="/gifts/" class="flex items-center px-4 py-3 text-base font-medium text-gray-700 hover:bg-wine-50 hover:text-wine-700 rounded-lg transition-all duration-200">
                            Wine Gifts
                        </a>
                        <a href="/subscription/" class="flex items-center px-4 py-3 text-base font-medium text-gray-700 hover:bg-wine-50 hover:text-wine-700 rounded-lg transition-all duration-200">
                            Wine Advisory
                        </a>
                        <a href="/about/" class="flex items-center px-4 py-3 text-base font-medium text-gray-700 hover:bg-wine-50 hover:text-wine-700 rounded-lg transition-all duration-200">
                            About
                        </a>
                        <a href="/contact/" class="flex items-center px-4 py-3 text-base font-medium text-gray-700 hover:bg-wine-50 hover:text-wine-700 rounded-lg transition-all duration-200">
                            Contact
                        </a>
                    </nav>
                </div>
                <div class="border-t border-gray-200 p-4 bg-gray-50">
                    <p class="text-sm text-gray-600 text-center">Expert wine guidance from certified sommeliers</p>
                </div>
            </div>
        </div>
    </header>
    
    <!-- Main Content -->
    <main id="main-content">
        <slot />
    </main>
    
    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-12">
        <div class="max-w-6xl mx-auto px-4 sm:px-6">
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8 mb-8">
                <div class="col-span-2 md:col-span-1 lg:col-span-1">
                    <div class="text-xl font-bold text-wine-400 mb-4">Wine Quick Start</div>
                    <p class="text-gray-400 text-sm leading-relaxed">Expert wine guidance from certified sommeliers. Find the perfect wine for any occasion.</p>
                </div>
                <div>
                    <h5 class="font-semibold mb-4 text-white">Explore</h5>
                    <ul class="space-y-3 text-sm">
                        <li><a href="/wine-pairings/" class="text-gray-400 hover:text-wine-400 transition-colors">Wine Pairings</a></li>
                        <li><a href="/learn/" class="text-gray-400 hover:text-wine-400 transition-colors">Learn</a></li>
                        <li><a href="/buy/" class="text-gray-400 hover:text-wine-400 transition-colors">Buying Guide</a></li>
                    </ul>
                </div>
                <div>
                    <h5 class="font-semibold mb-4 text-white">Services</h5>
                    <ul class="space-y-3 text-sm">
                        <li><a href="/shop/" class="text-gray-400 hover:text-wine-400 transition-colors">Wine Selection Help</a></li>
                        <li><a href="/gifts/" class="text-gray-400 hover:text-wine-400 transition-colors">Gift Consulting</a></li>
                        <li><a href="/subscription/" class="text-gray-400 hover:text-wine-400 transition-colors">Wine Advisory</a></li>
                    </ul>
                </div>
                <div>
                    <h5 class="font-semibold mb-4 text-white">Company</h5>
                    <ul class="space-y-3 text-sm">
                        <li><a href="/about/" class="text-gray-400 hover:text-wine-400 transition-colors">About Us</a></li>
                        <li><a href="/contact/" class="text-gray-400 hover:text-wine-400 transition-colors">Contact</a></li>
                    </ul>
                </div>
                <div>
                    <h5 class="font-semibold mb-4 text-white">Legal</h5>
                    <ul class="space-y-3 text-sm">
                        <li><a href="/privacy/" class="text-gray-400 hover:text-wine-400 transition-colors">Privacy Policy</a></li>
                        <li><a href="/terms/" class="text-gray-400 hover:text-wine-400 transition-colors">Terms of Service</a></li>
                    </ul>
                </div>
            </div>
            <div class="border-t border-gray-800 pt-6 flex flex-col md:flex-row justify-between items-center gap-4">
                <p class="text-sm text-gray-500">&copy; 2025 Wine Quick Start. All rights reserved.</p>
                <div class="flex flex-col sm:flex-row items-center gap-2 sm:gap-4">
                    <span class="text-sm text-gray-500">A project by</span>
                    <a href="https://cellarsofdw.com" target="_blank" rel="noopener" class="text-wine-400 hover:text-wine-300 font-medium transition-colors">
                        Cellars of DW
                    </a>
                    <span class="hidden sm:inline text-gray-600">|</span>
                    <a href="mailto:dw@cellarsofdw.com" class="text-gray-400 hover:text-wine-400 transition-colors text-sm">
                        dw@cellarsofdw.com
                    </a>
                </div>
            </div>
        </div>
    </footer>
    
    <!-- Mobile Menu Script -->
    <script>
        // Mobile menu functionality
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        const menuIcon = document.querySelector('.menu-icon');
        const closeIcon = document.querySelector('.close-icon');
        
        if (mobileMenuButton && mobileMenu) {
            mobileMenuButton.addEventListener('click', () => {
                const isOpen = mobileMenu.classList.contains('open');
                
                if (isOpen) {
                    mobileMenu.classList.remove('open');
                    mobileMenuButton.setAttribute('aria-expanded', 'false');
                    menuIcon?.classList.remove('hidden');
                    closeIcon?.classList.add('hidden');
                    document.body.style.overflow = '';
                } else {
                    mobileMenu.classList.add('open');
                    mobileMenuButton.setAttribute('aria-expanded', 'true');
                    menuIcon?.classList.add('hidden');
                    closeIcon?.classList.remove('hidden');
                    document.body.style.overflow = 'hidden';
                }
            });
            
            // Close menu when clicking outside
            document.addEventListener('click', (e) => {
                if (!mobileMenu.contains(e.target) && !mobileMenuButton.contains(e.target)) {
                    mobileMenu.classList.remove('open');
                    mobileMenuButton.setAttribute('aria-expanded', 'false');
                    menuIcon?.classList.remove('hidden');
                    closeIcon?.classList.add('hidden');
                    document.body.style.overflow = '';
                }
            });
            
            // Close menu on escape key
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape' && mobileMenu.classList.contains('open')) {
                    mobileMenu.classList.remove('open');
                    mobileMenuButton.setAttribute('aria-expanded', 'false');
                    menuIcon?.classList.remove('hidden');
                    closeIcon?.classList.add('hidden');
                    document.body.style.overflow = '';
                    mobileMenuButton.focus();
                }
            });
        }
        
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', (e) => {
                e.preventDefault();
                const href = (e.currentTarget as HTMLAnchorElement).getAttribute('href');
                const target = href ? document.querySelector(href) : null;
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>

    <!-- Vercel Analytics -->
    <Analytics />
</body>
</html>