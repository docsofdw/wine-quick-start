---
interface Props {
  class?: string;
}
const { class: className } = Astro.props;
---

<aside class:list={['consultation-cta', className]}>
  <div class="flex items-center gap-2 mb-3">
    <div class="w-8 h-8 rounded-full bg-wine-100 flex items-center justify-center flex-shrink-0">
      <svg class="w-4 h-4 text-wine-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
      </svg>
    </div>
    <h4 class="text-sm font-semibold text-gray-900">Need Personal Guidance?</h4>
  </div>
  <p class="text-xs text-gray-600 mb-3 leading-relaxed">
    Cellars of DW offers private consultations for collectors and enthusiasts.
  </p>
  <a
    href="mailto:dw@cellarsofdw.com"
    class="block w-full text-center text-xs font-medium text-wine-600 hover:text-wine-700 py-2 px-3 rounded-lg border border-wine-200 hover:border-wine-300 hover:bg-wine-50 transition-all"
  >
    Get in Touch
  </a>
</aside>

<style>
  .consultation-cta {
    @apply p-4 bg-gradient-to-br from-wine-50/50 to-gray-50 rounded-xl border border-wine-100/50 mt-6;
  }
</style>
