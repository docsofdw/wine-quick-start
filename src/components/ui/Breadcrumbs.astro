---
interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;

// Generate schema.org breadcrumb data
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": items.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.label,
    ...(item.href && { "item": `https://winequickstart.com${item.href}` })
  }))
};
---

<nav aria-label="Breadcrumb" class="mb-6">
  <ol class="flex flex-wrap items-center gap-1 sm:gap-2 text-sm">
    {items.map((item, index) => (
      <li class="flex items-center">
        {index > 0 && (
          <svg class="w-4 h-4 text-gray-400 mx-1 sm:mx-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        )}
        {item.href ? (
          <a
            href={item.href}
            class="text-gray-500 hover:text-wine-600 transition-colors"
          >
            {item.label}
          </a>
        ) : (
          <span class="text-gray-900 font-medium truncate max-w-[200px] sm:max-w-[300px]" aria-current="page">
            {item.label}
          </span>
        )}
      </li>
    ))}
  </ol>
</nav>

<!-- Schema.org Breadcrumb Markup -->
<script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
