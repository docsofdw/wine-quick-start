---
interface Props {
  class?: string;
}
const { class: className = '' } = Astro.props;
---

<svg class={className} viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Wine glass -->
  <path
    d="M16 8v12c0 4.418 3.582 8 8 8s8-3.582 8-8V8"
    stroke="currentColor"
    stroke-width="2.5"
    stroke-linecap="round"
  />
  <path
    d="M24 28v12M18 40h12"
    stroke="currentColor"
    stroke-width="2.5"
    stroke-linecap="round"
  />
  <!-- Wine level line -->
  <path
    d="M17 14h14"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    opacity="0.5"
  />
  <!-- Fork accent -->
  <path
    d="M38 12v16M38 12v-4M35 8v8M41 8v8"
    stroke="currentColor"
    stroke-width="1.5"
    stroke-linecap="round"
    opacity="0.4"
  />
  <!-- Decorative dots -->
  <circle cx="10" cy="36" r="2" fill="currentColor" opacity="0.2" />
  <circle cx="14" cy="32" r="1.5" fill="currentColor" opacity="0.15" />
</svg>
