---
import { Image } from 'astro:assets';
import wineFoodPairing from '../../assets/images/features/wine-food-pairing.png';
import wineRegions from '../../assets/images/features/wine-regions.png';
import smartWineShopping from '../../assets/images/features/smart-wine-shopping.png';

interface ShowcaseItem {
  title: string;
  description: string;
  href: string;
  image: ImageMetadata;
}

interface Props {
  items?: ShowcaseItem[];
}

const defaultItems: ShowcaseItem[] = [
  {
    title: 'Wine & Food Pairing',
    description: 'Perfect matches for every meal',
    href: '/wine-pairings/',
    image: wineFoodPairing
  },
  {
    title: 'Wine Regions',
    description: 'Explore world-famous vineyards',
    href: '/learn/',
    image: wineRegions
  },
  {
    title: 'Smart Wine Shopping',
    description: 'Best values at every price',
    href: '/buy/',
    image: smartWineShopping
  }
];

const { items = defaultItems } = Astro.props;
---

<section class="section-padding bg-gray-50">
  <div class="container">
    <div class="text-center mb-12">
      <h2 class="font-serif text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        Discover Your Wine Journey
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        From pairing basics to collecting rare bottles, we guide you every step of the way
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 stagger-children">
      {items.map((item) => (
        <a
          href={item.href}
          class="group block rounded-2xl overflow-hidden bg-white shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-2"
        >
          <div class="relative aspect-[3/2] overflow-hidden">
            <Image
              src={item.image}
              alt={item.title}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
              widths={[400, 600, 800]}
              sizes="(max-width: 768px) 100vw, 33vw"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/0 to-black/0"></div>
          </div>
          <div class="p-6">
            <h3 class="font-serif text-2xl font-bold text-gray-900 mb-2 group-hover:text-wine-600 transition-colors">
              {item.title}
            </h3>
            <p class="text-gray-600">{item.description}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
