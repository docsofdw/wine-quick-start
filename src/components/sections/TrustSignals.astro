---
interface Props {
  subscriberCount?: string;
  guideCount?: number;
  sommelierCount?: number;
}

const {
  subscriberCount = '5,000+',
  guideCount = 50,
  sommelierCount = 3
} = Astro.props;
---

<section class="py-12 bg-gradient-to-r from-gray-50 to-white border-y border-gray-100">
  <div class="container">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
      <!-- Subscriber Count -->
      <div class="flex flex-col items-center">
        <div class="w-16 h-16 rounded-full bg-wine-100 flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-wine-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
        <div class="text-4xl font-serif font-bold text-gray-900 mb-2">{subscriberCount}</div>
        <div class="text-gray-600 font-medium">Wine Enthusiasts</div>
        <div class="text-sm text-gray-500 mt-1">Growing community of wine lovers</div>
      </div>

      <!-- Expert Guides -->
      <div class="flex flex-col items-center">
        <div class="w-16 h-16 rounded-full bg-wine-100 flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-wine-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
        </div>
        <div class="text-4xl font-serif font-bold text-gray-900 mb-2">{guideCount}+</div>
        <div class="text-gray-600 font-medium">Expert Guides</div>
        <div class="text-sm text-gray-500 mt-1">Comprehensive wine education</div>
      </div>

      <!-- Certified Sommeliers -->
      <div class="flex flex-col items-center">
        <div class="w-16 h-16 rounded-full bg-wine-100 flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-wine-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
          </svg>
        </div>
        <div class="text-4xl font-serif font-bold text-gray-900 mb-2">{sommelierCount}</div>
        <div class="text-gray-600 font-medium">Certified Sommeliers</div>
        <div class="text-sm text-gray-500 mt-1">Professional wine expertise</div>
      </div>
    </div>
  </div>
</section>
