};

// Compute category counts
const categoryCounts = allPairings.reduce((acc, pairing) => {
  acc[pairing.category] = (acc[pairing.category] || 0) + 1;
  return acc;
}, {} as Record<string, number>);

const categories = Object.entries(categoryCounts)
  .map(([name, count]) => ({
    name,
    count,
    icon: categoryIcons[name] || "ðŸ·"
  }))
  .sort((a, b) => b.count - a.count);

const schema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Wine Pairings - Expert Food and Wine Matching Guides",
  "description": "Professional wine pairing guides with expert recommendations for every dish. From seafood to red meat, find the perfect wine match.",
  "url": "https://winequickstart.com/wine-pairings/"
};
---

<BaseLayout
  title="Wine Pairings - Expert Food and Wine Matching Guides"
  description="Professional wine pairing guides with expert recommendations for every dish. From seafood to red meat, find the perfect wine match."
  schema={schema}
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-wine-700 to-wine-900 text-white section-padding">
    <div class="container text-center">
      <h1 class="text-5xl font-bold mb-6 leading-tight">Wine Pairings</h1>
      <p class="text-xl mb-10 opacity-90 max-w-2xl mx-auto">
        Expert wine pairing guides with professional recommendations, tasting notes, and serving tips for every occasion.
      </p>

      <!-- Quick Stats -->
      <div class="flex flex-wrap justify-center gap-8 text-sm opacity-80">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
          </svg>
          <span>{allPairings.length} Expert Guides</span>
        </div>
