---
import BaseLayout from '../../layouts/BaseLayout.astro';

interface ArticleData {
  title: string;
  slug: string;
  description: string;
  readTime: string;
  category: string;
}

interface AstroFile {
  url?: string;
  frontmatter?: any;
  default?: {
    frontmatter?: any;
  };
}

// Helper to extract frontmatter from generated articles
function extractFrontmatter(file: AstroFile): any {
  return file.frontmatter || file.default?.frontmatter || {};
}

// Helper to determine category from content
function categorizeArticle(title: string, slug: string): string {
  const lower = title.toLowerCase() + ' ' + slug.toLowerCase();

  // Food pairings
  if (lower.includes('with steak') || lower.includes('with lamb')) return 'Meat';
  if (lower.includes('with chicken') || lower.includes('with turkey') || lower.includes('with pork')) return 'Poultry';
  if (lower.includes('with fish') || lower.includes('with salmon') || lower.includes('with seafood') || lower.includes('with sushi')) return 'Seafood';
  if (lower.includes('with pasta') || lower.includes('with pizza') || lower.includes('risotto')) return 'Italian';
  if (lower.includes('with cheese')) return 'Cheese';
  if (lower.includes('with taco')) return 'Mexican';

  // Wine types
  if (lower.includes('cabernet') || lower.includes('merlot') || lower.includes('pinot noir') || lower.includes('malbec') || lower.includes('syrah') || lower.includes('zinfandel')) return 'Red Wine';
  if (lower.includes('chardonnay') || lower.includes('sauvignon blanc') || lower.includes('riesling')) return 'White Wine';
  if (lower.includes('prosecco') || lower.includes('champagne') || lower.includes('sparkling')) return 'Sparkling';
  if (lower.includes('rose') || lower.includes('rosÃ©')) return 'RosÃ©';
  if (lower.includes('natural')) return 'Natural';
  if (lower.includes('orange')) return 'Orange Wine';

  return 'Wine Guide';
}

// Helper to capitalize title properly
function formatTitle(slug: string): string {
  return slug
    .split('-')
    .map(word => word.charAt(0).toUpperCase() + word.slice(1))
    .join(' ');
}

// Dynamically discover all wine pairing articles
const pairingFiles = await Astro.glob('./*.astro') as AstroFile[];
const allPairings: ArticleData[] = pairingFiles
  .filter((file: AstroFile) => !file.url?.includes('/index'))
  .map((file: AstroFile) => {
    const frontmatter = extractFrontmatter(file);
    const slug = file.url?.split('/').pop()?.replace(/\/$/, '') || 'unknown';

    // Try to get title from frontmatter, or generate from slug
    let title = frontmatter.title || formatTitle(slug);
    // Clean up generated titles
    if (title.includes('Guide:')) {
      title = title.split('Guide:')[0].trim() + ' Guide';
    }

    const description = frontmatter.description || `Expert guide for ${formatTitle(slug)}`;
    const readTime = frontmatter.readTime || '5 min';
    const category = categorizeArticle(title, slug);

    return { title, slug, description, readTime, category };
  })
  .sort((a, b) => a.title.localeCompare(b.title));

