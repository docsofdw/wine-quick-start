          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
          <span>Sommelier Approved</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span>Updated Weekly</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Categories Navigation -->
  <section class="section-padding-sm bg-gray-50">
    <div class="container">
      <div class="flex flex-wrap justify-center gap-3">
        <button class="filter-btn flex items-center gap-2 px-4 py-2 bg-white rounded-full shadow-sm border-2 border-wine-600 hover:shadow-md transition" data-category="all">
          <span class="text-lg">ðŸ“š</span>
          <span class="text-gray-700 font-medium">All</span>
          <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full">{allPairings.length}</span>
        </button>
        {categories.map((category) => (
          <button class="filter-btn flex items-center gap-2 px-4 py-2 bg-white rounded-full shadow-sm border border-gray-200 hover:border-wine-300 hover:shadow-md transition" data-category={category.name}>
            <span class="text-lg">{category.icon}</span>
            <span class="text-gray-700 font-medium">{category.name}</span>
            <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full">{category.count}</span>
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- All Pairings -->
  <section class="section-padding">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold mb-4 text-gray-900">All Wine Pairing Guides</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          {allPairings.length} expert guides curated by certified sommeliers
        </p>
      </div>

      <div id="pairings-grid" class="wine-grid wine-grid-3">
        {allPairings.map((pairing) => (
          <article class="wine-card group pairing-card" data-category={pairing.category}>
            <div class="flex items-center justify-between mb-4">
              <span class="inline-block px-3 py-1 bg-wine-50 text-wine-700 rounded-full text-sm font-medium">
                {pairing.category}
              </span>
              <span class="text-sm text-gray-500">{pairing.readTime}</span>
            </div>

            <h3 class="text-xl font-bold mb-3 text-gray-900 group-hover:text-wine-600 transition">
              <a href={`/wine-pairings/${pairing.slug}/`}>{pairing.title}</a>
            </h3>

            <p class="text-gray-600 mb-6 leading-relaxed flex-grow line-clamp-3">
              {pairing.description}
            </p>

            <a href={`/wine-pairings/${pairing.slug}/`}
               class="text-wine-600 font-medium hover:text-wine-700 transition">
              Read Guide â†’
            </a>
          </article>
        ))}
      </div>
      <p id="no-results" class="text-center text-gray-500 py-12 hidden">No pairings found in this category.</p>
    </div>
  </section>
</BaseLayout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

<script>
  // Category filtering functionality
  const filterButtons = document.querySelectorAll('.filter-btn');
  const pairingCards = document.querySelectorAll('.pairing-card');
  const noResults = document.getElementById('no-results');

  filterButtons.forEach(button => {
    button.addEventListener('click', () => {
      const category = (button as HTMLElement).dataset.category;

      // Update active button state
      filterButtons.forEach(btn => {
        btn.classList.remove('border-wine-600', 'border-2');
        btn.classList.add('border-gray-200', 'border');
      });
      button.classList.remove('border-gray-200', 'border');
      button.classList.add('border-wine-600', 'border-2');

      // Filter cards
      let visibleCount = 0;
      pairingCards.forEach(card => {
        const cardCategory = (card as HTMLElement).dataset.category;
        if (category === 'all' || cardCategory === category) {
          (card as HTMLElement).style.display = '';
          visibleCount++;
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });

      // Show/hide no results message
      if (noResults) {
        noResults.classList.toggle('hidden', visibleCount > 0);
      }
    });
  });
</script>
