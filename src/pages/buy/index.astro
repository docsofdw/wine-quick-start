---
import { Image } from 'astro:assets';
import BaseLayout from '../../layouts/BaseLayout.astro';
import buyHero from '../../assets/images/hero/buy-hero.png';

interface GuideData {
  title: string;
  slug: string;
  description: string;
  readTime: string;
  category: string;
  priceRange: string;
}

interface AstroFile {
  url?: string;
  frontmatter?: any;
  default?: {
    frontmatter?: any;
  };
}

// Helper to extract frontmatter
function extractFrontmatter(file: AstroFile): any {
  return file.frontmatter || file.default?.frontmatter || {};
}

// Helper to format title from slug
function formatTitle(slug: string): string {
  return slug
    .split('-')
    .map(word => word.charAt(0).toUpperCase() + word.slice(1))
    .join(' ');
}

// Helper to determine category and price range
function categorizeArticle(title: string, slug: string): { category: string; priceRange: string } {
  const lower = title.toLowerCase() + ' ' + slug.toLowerCase();

  if (lower.includes('natural wine')) return { category: 'Natural Wine', priceRange: '$25-45' };
  if (lower.includes('orange wine')) return { category: 'Orange Wine', priceRange: '$18-60' };
  if (lower.includes('under 20') || lower.includes('under-20')) return { category: 'Budget', priceRange: 'Under $20' };
  if (lower.includes('under 50') || lower.includes('under-50')) return { category: 'Mid-Range', priceRange: '$20-50' };
  if (lower.includes('cheap')) return { category: 'Budget', priceRange: 'Under $15' };
  if (lower.includes('price')) return { category: 'Price Guide', priceRange: 'Varies' };

  return { category: 'Buying Guide', priceRange: '$20-50' };
}

// Dynamically discover all buy articles
const buyFiles = await Astro.glob('./*.astro') as AstroFile[];
const allGuides: GuideData[] = buyFiles
  .filter((file: AstroFile) => !file.url?.includes('/index'))
  .map((file: AstroFile) => {
    const frontmatter = extractFrontmatter(file);
    const slug = file.url?.split('/').pop()?.replace(/\/$/, '') || 'unknown';

    let title = frontmatter.title || formatTitle(slug);
    if (title.includes('Guide:')) {
      title = title.split('Guide:')[0].trim() + ' Guide';
    }

    const description = frontmatter.description || `Expert buying guide for ${formatTitle(slug)}`;
    const readTime = frontmatter.readTime || '5 min';
    const { category, priceRange } = categorizeArticle(title, slug);

    return { title, slug, description, readTime, category, priceRange };
  })
  .sort((a, b) => a.title.localeCompare(b.title));

