---
import BaseLayout from '../../layouts/BaseLayout.astro';

interface GuideData {
  title: string;
  slug: string;
  description: string;
  readTime: string;
  category: string;
}

interface AstroFile {
  url?: string;
  frontmatter?: any;
  default?: {
    frontmatter?: any;
  };
}

// Helper to extract frontmatter
function extractFrontmatter(file: AstroFile): any {
  return file.frontmatter || file.default?.frontmatter || {};
}

// Helper to format title from slug
function formatTitle(slug: string): string {
  return slug
    .split('-')
    .map(word => word.charAt(0).toUpperCase() + word.slice(1))
    .join(' ');
}

// Helper to determine category
function categorizeArticle(title: string, slug: string): string {
  const lower = title.toLowerCase() + ' ' + slug.toLowerCase();

  // Wine regions
  if (lower.includes('bordeaux') || lower.includes('burgundy') || lower.includes('champagne') || lower.includes('napa') || lower.includes('tuscany') || lower.includes('rioja')) return 'Wine Regions';

  // Wine types
  if (lower.includes('natural wine')) return 'Natural Wine';
  if (lower.includes('orange wine')) return 'Orange Wine';
  if (lower.includes('sparkling') || lower.includes('champagne')) return 'Sparkling';

  // Budget/Reviews
  if (lower.includes('under') || lower.includes('cheap') || lower.includes('budget') || lower.includes('best')) return 'Best Picks';
  if (lower.includes('review') || lower.includes('recommendation')) return 'Reviews';
  if (lower.includes('beginner')) return 'Beginners';

  return 'Wine Guide';
}

// Dynamically discover all learn articles
const learnFiles = await Astro.glob('./*.astro') as AstroFile[];
const allGuides: GuideData[] = learnFiles
  .filter((file: AstroFile) => !file.url?.includes('/index'))
  .map((file: AstroFile) => {
    const frontmatter = extractFrontmatter(file);
    const slug = file.url?.split('/').pop()?.replace(/\/$/, '') || 'unknown';

    let title = frontmatter.title || formatTitle(slug);
    if (title.includes('Guide:')) {
      title = title.split('Guide:')[0].trim() + ' Guide';
    }

    const description = frontmatter.description || `Expert guide for ${formatTitle(slug)}`;
    const readTime = frontmatter.readTime || '5 min';
    const category = categorizeArticle(title, slug);

    return { title, slug, description, readTime, category };
  })
  .sort((a, b) => a.title.localeCompare(b.title));

