---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getFeaturedAuthors, getAuthorSchema } from '../data/authors';

const featuredAuthors = getFeaturedAuthors();

const schema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "AboutPage",
      "name": "About Wine Quick Start",
      "description": "Expert wine education and consulting from certified sommeliers.",
      "url": "https://winequickstart.com/about/"
    },
    {
      "@type": "Organization",
      "name": "Wine Quick Start",
      "url": "https://winequickstart.com",
      "description": "Expert wine education and consulting services",
      "foundingDate": "2020",
      "parentOrganization": {
        "@type": "Organization",
        "name": "Cellars of DW",
        "description": "Boutique wine consultancy specializing in cellar building, private tastings, and corporate wine programs",
        "email": "dw@cellarsofdw.com"
      },
      "employee": featuredAuthors.map(author => getAuthorSchema(author))
    }
  ]
};
---

<BaseLayout
  title="About Wine Quick Start - Expert Wine Education"
  description="Expert wine education from certified sommeliers. Making wine accessible, one pairing at a time."
  schema={schema}
>
  <!-- Hero -->
  <section class="py-16 md:py-24 bg-gradient-to-b from-wine-50 to-white">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        Wine guidance that makes sense.
      </h1>
      <p class="text-xl text-gray-600 leading-relaxed">
        We cut through the pretension and complexity, providing straightforward wine recommendations backed by professional expertise.
      </p>
    </div>
  </section>

  <!-- Mission -->
  <section class="py-16 md:py-20">
    <div class="max-w-3xl mx-auto px-4 sm:px-6">
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-12 h-12 bg-wine-100 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-wine-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Evidence-Based</h3>
          <p class="text-gray-600 text-sm">Recommendations grounded in professional training and extensive tasting experience.</p>
        </div>
        <div class="text-center">
          <div class="w-12 h-12 bg-wine-100 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-wine-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Accessible</h3>
          <p class="text-gray-600 text-sm">Wine knowledge for everyone, regardless of experience level or budget.</p>
        </div>
        <div class="text-center">
          <div class="w-12 h-12 bg-wine-100 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-wine-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Practical</h3>
          <p class="text-gray-600 text-sm">Actionable advice you can use immediately, whether shopping or hosting.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Team -->
  <section class="py-16 md:py-20 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Our Team</h2>
        <p class="text-gray-600 max-w-xl mx-auto">
          Certified professionals with decades of combined experience in wine education, consulting, and hospitality.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        {featuredAuthors.map(author => (
          <a href={`/about/${author.slug}`} class="block bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition-shadow group">
            <div class="w-16 h-16 rounded-full bg-gradient-to-br from-wine-100 to-wine-200 mx-auto mb-4 flex items-center justify-center text-xl text-wine-700 font-bold">
              {author.name.split(' ').map(n => n[0]).join('')}
            </div>
            <h3 class="text-lg font-semibold text-gray-900 text-center group-hover:text-wine-600 transition-colors">
              {author.name}
            </h3>
            <p class="text-sm text-wine-600 text-center mb-3">{author.role}</p>
            <p class="text-gray-600 text-sm text-center mb-4">{author.shortBio}</p>
            <div class="flex flex-wrap gap-1 justify-center">
              {author.credentials.slice(0, 2).map(cred => (
                <span class="text-xs bg-gray-100 text-gray-600 px-2 py-1 rounded">
                  {cred.split('(')[0].trim().split(' ').slice(0, 3).join(' ')}
                </span>
              ))}
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Approach -->
  <section class="py-16 md:py-20">
    <div class="max-w-3xl mx-auto px-4 sm:px-6">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Our Approach</h2>

      <div class="space-y-8">
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">No Gatekeeping</h3>
          <p class="text-gray-600">
            Wine shouldn't require a special vocabulary or years of study to enjoy. We explain concepts clearly, recommend wines at every price point, and meet you where you are.
          </p>
        </div>

        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Transparent Recommendations</h3>
          <p class="text-gray-600">
            When we recommend wines or retailers, we're upfront about any relationships. Our goal is providing valueâ€”trust comes first.
          </p>
        </div>

        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Always Learning</h3>
          <p class="text-gray-600">
            The wine world evolves constantly. We update our content as we discover new producers, regions, and techniques worth sharing.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Cellars of DW Section -->
  <section class="py-16 md:py-20 bg-gray-50">
    <div class="max-w-3xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-8">
        <p class="text-sm font-medium text-wine-600 uppercase tracking-wide mb-2">Behind the Scenes</p>
        <h2 class="text-3xl font-bold text-gray-900">A Cellars of DW Project</h2>
      </div>

      <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100">
        <p class="text-gray-600 leading-relaxed mb-6">
          Wine Quick Start is an educational initiative by <a href="https://cellarsofdw.com" target="_blank" rel="noopener" class="text-wine-600 hover:text-wine-700 font-semibold">Cellars of DW</a>, a boutique wine consultancy dedicated to making fine wine accessible. What started as client education materials evolved into a comprehensive resource for wine enthusiasts everywhere.
        </p>
        <p class="text-gray-600 leading-relaxed mb-6">
          Our consultancy works with private collectors, restaurants, and corporate clients on cellar building, wine program development, and curated tasting experiences. The expertise behind those services informs every article on this site.
        </p>
        <div class="flex flex-col sm:flex-row gap-6 items-center justify-center pt-6 border-t border-gray-100">
          <a href="https://cellarsofdw.com" target="_blank" rel="noopener" class="inline-flex items-center gap-2 text-wine-600 hover:text-wine-700 font-medium">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
            </svg>
            cellarsofdw.com
          </a>
          <a href="mailto:dw@cellarsofdw.com" class="inline-flex items-center gap-2 text-wine-600 hover:text-wine-700 font-medium">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            dw@cellarsofdw.com
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 md:py-20 bg-wine-600">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-2xl md:text-3xl font-bold text-white mb-4">Need personalized guidance?</h2>
      <p class="text-wine-100 mb-8">Cellars of DW offers private consultations, cellar building, event wine selection, and corporate tastings.</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="mailto:dw@cellarsofdw.com" class="inline-flex items-center justify-center gap-2 bg-white text-wine-600 px-6 py-3 rounded-lg font-semibold hover:bg-wine-50 transition-colors">
          Email Us Directly
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </a>
        <a href="/contact" class="inline-flex items-center justify-center gap-2 bg-wine-500 text-white px-6 py-3 rounded-lg font-semibold hover:bg-wine-400 transition-colors border border-wine-400">
          Contact Form
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
