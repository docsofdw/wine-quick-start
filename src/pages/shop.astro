---
import BaseLayout from '../layouts/BaseLayout.astro';

const schema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Wine Selection Consulting",
  "description": "Get personalized wine recommendations from certified sommeliers. Expert guidance for building your collection, stocking your cellar, or finding the perfect bottle.",
  "url": "https://winequickstart.com/shop",
  "provider": {
    "@type": "Organization",
    "name": "Cellars of DW"
  }
};

const services = [
  {
    icon: "üç∑",
    title: "Personal Shopping",
    description: "Tell us your taste, budget, and occasion. We'll curate a personalized list of recommendations."
  },
  {
    icon: "üè†",
    title: "Cellar Building",
    description: "Starting a wine collection? Get expert guidance on what to buy and how to store it."
  },
  {
    icon: "üéâ",
    title: "Event Planning",
    description: "Hosting a dinner party or event? We'll help you select the perfect wines for your menu."
  },
  {
    icon: "üíº",
    title: "Corporate Accounts",
    description: "Impress clients with expertly chosen wines. Ongoing advisory for businesses."
  }
];

const process = [
  {
    step: "1",
    title: "Tell Us What You Need",
    description: "Fill out a quick form about your preferences, budget, and what you're looking for."
  },
  {
    step: "2",
    title: "Get Expert Recommendations",
    description: "Our sommeliers curate a personalized selection based on your specific needs."
  },
  {
    step: "3",
    title: "Buy With Confidence",
    description: "Purchase from your preferred retailer knowing you're getting exactly what you need."
  }
];
---

<BaseLayout
  title="Wine Selection Help | Expert Recommendations | Wine Quick Start"
  description="Get personalized wine recommendations from certified sommeliers. Expert guidance for any occasion, budget, or taste preference. Free consultation available."
  schema={schema}
>
  <!-- Hero -->
  <section class="relative bg-gradient-to-br from-wine-900 via-wine-800 to-wine-900 text-white overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_40%,rgba(255,255,255,0.1),transparent_50%)]"></div>
    </div>
    <div class="container relative z-10 py-20 lg:py-28">
      <div class="max-w-3xl">
        <span class="inline-block text-wine-300 text-sm font-medium tracking-wider uppercase mb-4">Wine Selection Help</span>
        <h1 class="font-serif text-5xl md:text-6xl font-bold mb-6 leading-tight">
          Not Sure What to Buy?
        </h1>
        <p class="text-xl text-wine-100 mb-8 leading-relaxed max-w-2xl">
          Skip the guesswork. Get personalized wine recommendations from certified sommeliers who actually know what they're talking about.
        </p>
        <div class="flex flex-wrap gap-4">
          <a href="/contact/" class="btn-primary">
            Get Free Recommendations
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a href="#how-it-works" class="inline-flex items-center gap-2 px-6 py-3 bg-white/10 border border-white/40 text-white rounded-lg font-medium hover:bg-white/20 transition">
            How It Works
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Problem/Solution -->
  <section class="py-16 bg-wine-50">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="font-serif text-3xl font-bold text-gray-900 mb-4">Wine Shopping Shouldn't Be Overwhelming</h2>
        <p class="text-lg text-gray-600">
          Thousands of bottles. Confusing labels. Endless options. We cut through the noise and tell you exactly what to buy for your specific situation ‚Äî no sales pitch, no commission, just honest expert advice.
        </p>
      </div>
    </div>
  </section>

  <!-- Services -->
  <section class="section-padding">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="font-serif text-4xl font-bold text-gray-900 mb-4">How We Can Help</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">Expert guidance for every wine buying situation</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {services.map((service) => (
          <div class="bg-white rounded-2xl p-6 border border-gray-100 hover:border-wine-200 hover:shadow-lg transition-all duration-300">
            <span class="text-4xl mb-4 block">{service.icon}</span>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">{service.title}</h3>
            <p class="text-gray-600 text-sm">{service.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="section-padding bg-gray-50" id="how-it-works">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="font-serif text-4xl font-bold text-gray-900 mb-4">How It Works</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">Get expert recommendations in three simple steps</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        {process.map((item) => (
          <div class="text-center">
            <div class="w-16 h-16 bg-wine-600 text-white rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl font-bold">{item.step}</span>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{item.title}</h3>
            <p class="text-gray-600 text-sm">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Social Proof -->
  <section class="section-padding">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <div class="bg-wine-50 rounded-2xl p-8 lg:p-12 text-center">
          <div class="text-5xl mb-4">üç∑</div>
          <blockquote class="font-serif text-2xl text-gray-900 mb-4 italic">
            "Finally, someone who actually listens to what I want instead of pushing expensive bottles. The recommendations were spot-on."
          </blockquote>
          <p class="text-gray-600">‚Äî Happy Client</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section-padding bg-wine-900 text-white">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="font-serif text-4xl font-bold mb-4">Ready for Better Wine?</h2>
        <p class="text-xl text-wine-200 mb-8">Tell us what you're looking for and get personalized recommendations from our team.</p>
        <a href="/contact/" class="btn-primary bg-white text-wine-900 hover:bg-wine-50">
          Get Your Free Consultation
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <p class="text-wine-300 text-sm mt-4">No obligation. No spam. Just good wine advice.</p>
        <div class="mt-8 pt-6 border-t border-wine-800">
          <p class="text-wine-400 text-sm">A service by <a href="https://cellarsofdw.com" target="_blank" rel="noopener" class="text-wine-300 hover:text-white font-medium">Cellars of DW</a> ¬∑ <a href="mailto:dw@cellarsofdw.com" class="text-wine-300 hover:text-white">dw@cellarsofdw.com</a></p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
