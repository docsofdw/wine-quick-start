---
import BaseLayout from '../layouts/BaseLayout.astro';

const schema = {
  "@context": "https://schema.org",
  "@type": "Store",
  "name": "Wine Quick Start Shop",
  "description": "Curated wine selections handpicked by certified sommeliers. Quality bottles at every price point.",
  "url": "https://winequickstart.com/shop"
};

const categories = [
  {
    name: "Under $20",
    description: "Exceptional value wines that over-deliver",
    icon: "üíé",
    link: "/shop/under-20/"
  },
  {
    name: "By Region",
    description: "Explore wines from world-renowned regions",
    icon: "üó∫Ô∏è",
    link: "/shop/regions/"
  },
  {
    name: "By Occasion",
    description: "The perfect bottle for every moment",
    icon: "ü•Ç",
    link: "/shop/occasions/"
  },
  {
    name: "Sommelier Picks",
    description: "Our experts' current favorites",
    icon: "‚≠ê",
    link: "/shop/picks/"
  }
];

const featuredWines = [
  {
    name: "Ch√¢teau Gloria Saint-Julien",
    region: "Bordeaux, France",
    price: "$45",
    rating: "93 pts",
    type: "Red"
  },
  {
    name: "Cloudy Bay Sauvignon Blanc",
    region: "Marlborough, NZ",
    price: "$28",
    rating: "91 pts",
    type: "White"
  },
  {
    name: "Schramsberg Brut Ros√©",
    region: "Napa Valley, USA",
    price: "$42",
    rating: "92 pts",
    type: "Sparkling"
  }
];
---

<BaseLayout
  title="Shop Wine | Wine Quick Start"
  description="Curated wine selections handpicked by certified sommeliers. Quality bottles at every price point, from everyday sippers to special occasion splurges."
  schema={schema}
>
  <!-- Hero -->
  <section class="relative bg-gradient-to-br from-wine-900 via-wine-800 to-wine-900 text-white overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_40%,rgba(255,255,255,0.1),transparent_50%)]"></div>
    </div>
    <div class="container relative z-10 py-20 lg:py-28">
      <div class="max-w-3xl">
        <span class="inline-block text-wine-300 text-sm font-medium tracking-wider uppercase mb-4">Shop Wines</span>
        <h1 class="font-serif text-5xl md:text-6xl font-bold mb-6 leading-tight">
          Sommelier-Curated Wines
        </h1>
        <p class="text-xl text-wine-100 mb-8 leading-relaxed max-w-2xl">
          Every bottle handpicked by certified sommeliers. No filler wines, no inflated prices ‚Äî just exceptional quality at every price point.
        </p>
        <div class="flex flex-wrap gap-4">
          <a href="#categories" class="btn-primary">
            Browse Collection
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </a>
          <a href="/gifts/" class="btn-secondary border-white/30 text-white hover:bg-white/10">
            Send as Gift
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Value Props -->
  <section class="py-12 bg-wine-50 border-b border-wine-100">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
        <div class="flex flex-col items-center">
          <div class="w-12 h-12 rounded-full bg-wine-100 flex items-center justify-center mb-3">
            <svg class="w-6 h-6 text-wine-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900">Expert Vetted</h3>
          <p class="text-gray-600 text-sm">Every wine personally tasted</p>
        </div>
        <div class="flex flex-col items-center">
          <div class="w-12 h-12 rounded-full bg-wine-100 flex items-center justify-center mb-3">
            <svg class="w-6 h-6 text-wine-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900">Fair Pricing</h3>
          <p class="text-gray-600 text-sm">No markup games</p>
        </div>
        <div class="flex flex-col items-center">
          <div class="w-12 h-12 rounded-full bg-wine-100 flex items-center justify-center mb-3">
            <svg class="w-6 h-6 text-wine-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900">Safe Shipping</h3>
          <p class="text-gray-600 text-sm">Temperature controlled</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Categories -->
  <section class="section-padding" id="categories">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="font-serif text-4xl font-bold text-gray-900 mb-4">Shop by Category</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">Find exactly what you're looking for</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {categories.map((cat) => (
          <a href={cat.link} class="wine-card group hover:border-wine-200 transition-all duration-300">
            <span class="text-4xl mb-4 block">{cat.icon}</span>
            <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-wine-600 transition">{cat.name}</h3>
            <p class="text-gray-600 text-sm">{cat.description}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Wines -->
  <section class="section-padding bg-gray-50">
    <div class="container">
      <div class="text-center mb-12">
        <span class="text-wine-600 text-sm font-medium tracking-wider uppercase">This Week</span>
        <h2 class="font-serif text-4xl font-bold text-gray-900 mt-2 mb-4">Featured Selections</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">Our sommeliers' current recommendations</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {featuredWines.map((wine) => (
          <div class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-md transition-shadow">
            <div class="flex justify-between items-start mb-4">
              <span class="text-xs font-medium px-3 py-1 rounded-full bg-wine-50 text-wine-600">{wine.type}</span>
              <span class="text-xs font-medium text-gray-500">{wine.rating}</span>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-1">{wine.name}</h3>
            <p class="text-sm text-gray-500 mb-4">{wine.region}</p>
            <div class="flex justify-between items-center pt-4 border-t border-gray-100">
              <span class="text-2xl font-bold text-wine-600">{wine.price}</span>
              <button class="text-sm font-medium text-wine-600 hover:text-wine-700 transition">
                View Details ‚Üí
              </button>
            </div>
          </div>
        ))}
      </div>

      <div class="text-center mt-12">
        <a href="/shop/all/" class="btn-primary">
          View All Wines
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section-padding bg-wine-900 text-white">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="font-serif text-4xl font-bold mb-4">Not Sure Where to Start?</h2>
        <p class="text-xl text-wine-200 mb-8">Take our quick quiz and get personalized wine recommendations based on your taste preferences.</p>
        <a href="/quiz/" class="btn-primary bg-white text-wine-900 hover:bg-wine-50">
          Take the Quiz
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
