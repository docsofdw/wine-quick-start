---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { authors, getAuthorSchema } from '../../data/authors';

export const prerender = true;

export function getStaticPaths() {
  return authors.map(author => ({
    params: { slug: author.slug },
    props: { author }
  }));
}

const { author } = Astro.props;

if (!author) {
  return Astro.redirect('/about');
}

const schema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "ProfilePage",
      "name": `${author.name} - Wine Expert`,
      "description": author.shortBio,
      "url": `https://winesquickstart.com/about/${author.slug}`
    },
    getAuthorSchema(author)
  ]
};

const bioLines = author.bio.split('\n\n');
---

<BaseLayout
  title={`${author.name} - ${author.role} | Wine Quick Start`}
  description={author.shortBio}
  schema={schema}
>
  <div class="py-12 md:py-16 lg:py-20">
    <div class="max-w-3xl mx-auto px-4 sm:px-6">
      <!-- Author Header -->
      <header class="text-center mb-12">
        <div class="w-28 h-28 rounded-full bg-gradient-to-br from-wine-100 to-wine-200 mx-auto mb-6 flex items-center justify-center text-4xl text-wine-700 font-bold shadow-lg">
          {author.name.split(' ').map(n => n[0]).join('')}
        </div>
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">{author.name}</h1>
        <p class="text-lg text-wine-600 mb-4">{author.role}</p>
        <p class="text-gray-500">{author.experience}</p>

        <!-- Social Links -->
        {(author.socials.linkedin || author.socials.twitter || author.socials.instagram) && (
          <div class="flex justify-center gap-4 mt-6">
            {author.socials.linkedin && (
              <a href={author.socials.linkedin} target="_blank" rel="noopener noreferrer"
                 class="text-gray-400 hover:text-wine-600 transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                </svg>
              </a>
            )}
            {author.socials.twitter && (
              <a href={author.socials.twitter} target="_blank" rel="noopener noreferrer"
                 class="text-gray-400 hover:text-wine-600 transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </a>
            )}
            {author.socials.instagram && (
              <a href={author.socials.instagram} target="_blank" rel="noopener noreferrer"
                 class="text-gray-400 hover:text-wine-600 transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              </a>
            )}
          </div>
        )}
      </header>

      <!-- Credentials -->
      <section class="mb-12">
        <h2 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-4">Credentials</h2>
        <div class="space-y-3">
          {author.credentials.map(credential => (
            <div class="flex items-center gap-3 text-gray-700">
              <svg class="w-5 h-5 text-wine-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span>{credential}</span>
            </div>
          ))}
        </div>
      </section>

      <!-- Bio -->
      <section class="mb-12">
        <h2 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-4">About</h2>
        <div class="prose prose-lg text-gray-600 space-y-4">
          {bioLines.map(para => (
            <p>{para}</p>
          ))}
        </div>
      </section>

      <!-- Expertise -->
      <section class="mb-12">
        <h2 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-4">Areas of Expertise</h2>
        <div class="flex flex-wrap gap-2">
          {author.expertise.map(topic => (
            <span class="px-4 py-2 bg-wine-50 text-wine-700 rounded-full text-sm font-medium">
              {topic}
            </span>
          ))}
        </div>
      </section>

      <!-- CTA -->
      <section class="text-center py-10 px-6 bg-gray-50 rounded-2xl">
        <h2 class="text-xl font-semibold text-gray-900 mb-2">Work with {author.name.split(' ')[0]}</h2>
        <p class="text-gray-600 mb-6">Private wine consulting, event planning, and corporate tastings.</p>
        <a href="/contact" class="inline-flex items-center gap-2 bg-wine-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-wine-700 transition-colors">
          Get in Touch
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </section>

      <!-- Back Link -->
      <div class="mt-12 pt-8 border-t border-gray-100">
        <a href="/about" class="text-gray-500 hover:text-wine-600 text-sm flex items-center gap-2 transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to About
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
