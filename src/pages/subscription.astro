---
import BaseLayout from '../layouts/BaseLayout.astro';

const schema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Wine Advisory Service",
  "description": "Ongoing wine consulting and advisory services. Your personal sommelier on retainer for recommendations, cellar management, and wine education.",
  "url": "https://winequickstart.com/subscription",
  "provider": {
    "@type": "Organization",
    "name": "Cellars of DW"
  }
};

const services = [
  {
    title: "Personal Advisory",
    description: "Ongoing access to sommelier expertise for all your wine decisions",
    features: [
      "Unlimited recommendations",
      "Cellar management advice",
      "Dinner party planning",
      "Priority response time"
    ]
  },
  {
    title: "Corporate Retainer",
    description: "Dedicated wine consulting for your business needs",
    features: [
      "Client gifting strategy",
      "Event wine selection",
      "Team education sessions",
      "Vendor negotiations"
    ]
  },
  {
    title: "Collector Services",
    description: "Expert guidance for serious wine collectors",
    features: [
      "Acquisition strategy",
      "Cellar audits",
      "Investment guidance",
      "Auction consulting"
    ]
  }
];

const benefits = [
  {
    icon: "üì±",
    title: "Always Available",
    description: "Text, email, or call whenever you have a wine question"
  },
  {
    icon: "üéØ",
    title: "Personalized",
    description: "We learn your taste and preferences over time"
  },
  {
    icon: "üí∞",
    title: "Save Money",
    description: "Stop wasting money on wines you don't love"
  },
  {
    icon: "üß†",
    title: "Learn More",
    description: "Grow your wine knowledge with every conversation"
  }
];
---

<BaseLayout
  title="Wine Advisory Service | Personal Sommelier | Wine Quick Start"
  description="Your personal sommelier on retainer. Ongoing wine consulting for individuals, collectors, and businesses. Expert guidance whenever you need it."
  schema={schema}
>
  <!-- Hero -->
  <section class="relative bg-gradient-to-b from-gray-900 via-wine-900 to-wine-800 text-white overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,rgba(165,33,69,0.3),transparent_70%)]"></div>
    </div>
    <div class="container relative z-10 py-20 lg:py-28">
      <div class="max-w-3xl mx-auto text-center">
        <span class="inline-block text-wine-300 text-sm font-medium tracking-wider uppercase mb-4">Wine Advisory</span>
        <h1 class="font-serif text-5xl md:text-6xl font-bold mb-6 leading-tight">
          Your Personal<br />Sommelier
        </h1>
        <p class="text-xl text-wine-100 mb-8 leading-relaxed max-w-2xl mx-auto">
          Ongoing expert guidance for every wine decision. Like having a sommelier friend you can text anytime.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact/" class="btn-primary">
            Learn More
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a href="#services" class="inline-flex items-center gap-2 px-6 py-3 bg-white/10 border border-white/40 text-white rounded-lg font-medium hover:bg-white/20 transition">
            See Services
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Benefits -->
  <section class="py-16 bg-white border-b border-gray-100">
    <div class="container">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {benefits.map((benefit) => (
          <div class="text-center">
            <span class="text-3xl mb-3 block">{benefit.icon}</span>
            <h3 class="font-semibold text-gray-900 mb-1">{benefit.title}</h3>
            <p class="text-gray-600 text-sm">{benefit.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Problem -->
  <section class="section-padding bg-wine-50">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="font-serif text-3xl font-bold text-gray-900 mb-4">Tired of Wine Guesswork?</h2>
        <p class="text-lg text-gray-600 mb-6">
          Every wine decision feels like a gamble. What should I bring to dinner? What pairs with this dish? Is this bottle worth the price? Should I buy this for my cellar?
        </p>
        <p class="text-lg text-wine-700 font-medium">
          What if you had a wine expert you could just ask?
        </p>
      </div>
    </div>
  </section>

  <!-- Services -->
  <section class="section-padding" id="services">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="font-serif text-4xl font-bold text-gray-900 mb-4">Advisory Services</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">Tailored consulting for your specific needs</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        {services.map((service) => (
          <div class="bg-white rounded-2xl p-8 border border-gray-200 hover:border-wine-200 hover:shadow-lg transition-all duration-300">
            <h3 class="text-xl font-bold text-gray-900 mb-2">{service.title}</h3>
            <p class="text-gray-600 text-sm mb-6">{service.description}</p>
            <ul class="space-y-3">
              {service.features.map((feature) => (
                <li class="flex items-start gap-3 text-sm text-gray-700">
                  <svg class="w-5 h-5 text-wine-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>

      <div class="text-center mt-12">
        <a href="/contact/" class="btn-primary">
          Discuss Your Needs
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <p class="text-gray-500 text-sm mt-4">Custom packages available. Let's talk about what you need.</p>
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="section-padding bg-gray-50">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="font-serif text-4xl font-bold text-gray-900 mb-4">How It Works</h2>
      </div>

      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-12 h-12 bg-wine-600 rounded-full flex items-center justify-center mx-auto mb-4 text-white font-bold">1</div>
            <h3 class="font-semibold text-gray-900 mb-2">Initial Consultation</h3>
            <p class="text-gray-600 text-sm">We learn about your taste, budget, and how you enjoy wine</p>
          </div>
          <div class="text-center">
            <div class="w-12 h-12 bg-wine-600 rounded-full flex items-center justify-center mx-auto mb-4 text-white font-bold">2</div>
            <h3 class="font-semibold text-gray-900 mb-2">Ongoing Access</h3>
            <p class="text-gray-600 text-sm">Reach out whenever you have a question or need a recommendation</p>
          </div>
          <div class="text-center">
            <div class="w-12 h-12 bg-wine-600 rounded-full flex items-center justify-center mx-auto mb-4 text-white font-bold">3</div>
            <h3 class="font-semibold text-gray-900 mb-2">Better Wine Life</h3>
            <p class="text-gray-600 text-sm">Enjoy wine more, waste less money, and grow your knowledge</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonial -->
  <section class="section-padding">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <div class="bg-wine-900 rounded-2xl p-8 lg:p-12 text-white text-center">
          <div class="text-5xl mb-4">üç∑</div>
          <blockquote class="font-serif text-2xl mb-4 italic">
            "Having someone I can just text when I'm standing in the wine aisle is a game changer. No more panic buying."
          </blockquote>
          <p class="text-wine-300">‚Äî Advisory Client</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="section-padding bg-gray-900 text-white">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="font-serif text-4xl font-bold mb-4">Ready for Expert Guidance?</h2>
        <p class="text-xl text-gray-300 mb-8">Let's talk about how ongoing advisory can work for you.</p>
        <a href="/contact/" class="btn-primary bg-wine-600 hover:bg-wine-700">
          Schedule a Call
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <div class="mt-8 pt-6 border-t border-gray-800">
          <p class="text-gray-500 text-sm">A service by <a href="https://cellarsofdw.com" target="_blank" rel="noopener" class="text-gray-400 hover:text-white font-medium">Cellars of DW</a> ¬∑ <a href="mailto:dw@cellarsofdw.com" class="text-gray-400 hover:text-white">dw@cellarsofdw.com</a></p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
