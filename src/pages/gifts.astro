---
import BaseLayout from '../layouts/BaseLayout.astro';

const schema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Wine Gift Consulting",
  "description": "Expert help selecting the perfect wine gift. Corporate gifting, special occasions, and personalized recommendations from certified sommeliers.",
  "url": "https://winesquickstart.com/gifts",
  "provider": {
    "@type": "Organization",
    "name": "Cellars of DW"
  }
};

const occasions = [
  { name: "Corporate Gifts", emoji: "üíº", description: "Impress clients and reward teams" },
  { name: "Weddings", emoji: "üíí", description: "Celebrate the big day" },
  { name: "Birthdays", emoji: "üéÇ", description: "A gift they'll remember" },
  { name: "Thank You", emoji: "üôè", description: "Show real appreciation" },
  { name: "Holidays", emoji: "üéÑ", description: "Seasonal gifting made easy" },
  { name: "Housewarming", emoji: "üè†", description: "Welcome them home" }
];

const whyUs = [
  {
    title: "We Know Wine",
    description: "Certified sommeliers who taste thousands of bottles. We know what's actually good."
  },
  {
    title: "We Know People",
    description: "Tell us about the recipient and we'll match the wine to their personality and taste."
  },
  {
    title: "No Upselling",
    description: "We recommend based on value, not margin. The best $30 bottle beats a mediocre $100 one."
  }
];
---

<BaseLayout
  title="Wine Gift Help | Find the Perfect Bottle | Wine Quick Start"
  description="Need help picking a wine gift? Our sommeliers help you find the perfect bottle for any occasion ‚Äî corporate gifts, weddings, birthdays, and more."
  schema={schema}
>
  <!-- Hero -->
  <section class="relative bg-gradient-to-br from-wine-800 via-wine-900 to-gray-900 text-white overflow-hidden">
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-20 left-10 w-64 h-64 bg-wine-500 rounded-full blur-3xl"></div>
      <div class="absolute bottom-10 right-20 w-96 h-96 bg-wine-600 rounded-full blur-3xl"></div>
    </div>
    <div class="container relative z-10 py-20 lg:py-28">
      <div class="max-w-3xl mx-auto text-center">
        <span class="inline-block text-wine-300 text-sm font-medium tracking-wider uppercase mb-4">Wine Gift Consulting</span>
        <h1 class="font-serif text-5xl md:text-6xl font-bold mb-6 leading-tight">
          Give a Gift<br />They'll Actually Love
        </h1>
        <p class="text-xl text-wine-100 mb-8 leading-relaxed max-w-2xl mx-auto">
          Stop guessing. Our sommeliers help you pick the perfect wine for any person, any occasion, any budget.
        </p>
        <a href="/contact/" class="btn-primary">
          Get Gift Recommendations
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Occasions -->
  <section class="py-12 bg-wine-50 border-b border-wine-100">
    <div class="container">
      <p class="text-center text-gray-600 mb-6">We help with gifts for every occasion</p>
      <div class="flex flex-wrap justify-center gap-4">
        {occasions.map((occ) => (
          <div class="flex items-center gap-2 px-5 py-2.5 bg-white rounded-full border border-wine-100">
            <span class="text-lg">{occ.emoji}</span>
            <span class="text-sm font-medium text-gray-700">{occ.name}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- The Problem -->
  <section class="section-padding">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h2 class="font-serif text-4xl font-bold text-gray-900 mb-4">Wine Gifts Are Hard</h2>
        <p class="text-xl text-gray-600">
          You want to impress, but you're staring at a wall of bottles with no idea what's good. Too cheap looks bad. Too expensive feels wasteful. And what if they hate it?
        </p>
      </div>

      <div class="max-w-4xl mx-auto">
        <div class="bg-gradient-to-r from-wine-600 to-wine-700 rounded-2xl p-8 lg:p-12 text-white">
          <h3 class="font-serif text-2xl font-bold mb-4 text-center">Here's What We Do</h3>
          <p class="text-wine-100 text-center text-lg mb-8">
            Tell us about the recipient ‚Äî their taste, the occasion, your budget. We'll give you 2-3 specific recommendations you can buy anywhere, plus exactly what to say when you give it to them.
          </p>
          <div class="flex justify-center">
            <a href="/contact/" class="btn-primary bg-white text-wine-700 hover:bg-wine-50">
              Get Started Free
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Us -->
  <section class="section-padding bg-gray-50">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="font-serif text-4xl font-bold text-gray-900 mb-4">Why Ask Us?</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        {whyUs.map((item) => (
          <div class="text-center">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">{item.title}</h3>
            <p class="text-gray-600">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Corporate Section -->
  <section class="section-padding">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center max-w-5xl mx-auto">
        <div>
          <span class="text-wine-600 text-sm font-medium tracking-wider uppercase">For Business</span>
          <h2 class="font-serif text-4xl font-bold text-gray-900 mt-2 mb-4">Corporate Wine Consulting</h2>
          <p class="text-gray-600 text-lg mb-6">
            Need to send gifts to clients, reward your team, or stock the office for events? We handle the strategy so you look good without the stress.
          </p>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center gap-3 text-gray-700">
              <svg class="w-5 h-5 text-wine-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Bulk gift recommendations
            </li>
            <li class="flex items-center gap-3 text-gray-700">
              <svg class="w-5 h-5 text-wine-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Event wine selection
            </li>
            <li class="flex items-center gap-3 text-gray-700">
              <svg class="w-5 h-5 text-wine-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Ongoing advisory retainer
            </li>
          </ul>
          <a href="/contact/" class="btn-primary">
            Discuss Your Needs
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
        <div class="hidden lg:block">
          <div class="bg-wine-50 rounded-2xl p-8 border border-wine-100">
            <div class="text-6xl text-center mb-4">üíº</div>
            <p class="text-gray-700 text-center italic">"They handled our entire holiday client gifting. 50 personalized recommendations, zero stress on our end."</p>
            <p class="text-gray-500 text-sm text-center mt-4">‚Äî Marketing Director</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section-padding bg-wine-900 text-white">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="font-serif text-4xl font-bold mb-4">Need a Wine Gift?</h2>
        <p class="text-xl text-wine-200 mb-8">Tell us about the person and occasion. We'll send you the perfect recommendations ‚Äî free, no strings attached.</p>
        <a href="/contact/" class="btn-primary bg-white text-wine-900 hover:bg-wine-50">
          Get Recommendations
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <div class="mt-8 pt-6 border-t border-wine-800">
          <p class="text-wine-400 text-sm">A service by <a href="https://cellarsofdw.com" target="_blank" rel="noopener" class="text-wine-300 hover:text-white font-medium">Cellars of DW</a> ¬∑ <a href="mailto:dw@cellarsofdw.com" class="text-wine-300 hover:text-white">dw@cellarsofdw.com</a></p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
